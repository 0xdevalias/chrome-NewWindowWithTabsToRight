{
  "name": "New Window With Tabs To Right",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "This extension creates a new window with the tabs to the right of the currently selected tab.",
  "homepage_url": "http://devalias.net",
  "permissions": [
    "tabs",
    "contextMenus"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    // "page": "src/bg/background.html",
    "scripts": [
      "js/chromeExtensionApiAbstractions.js",
      "src/bg/background.js"
    ],
    "persistent": true
  }
}
